{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@orm/*": ["lib/orm/*"],
			"@utils/*": ["lib/utils/*"],
			"@lib/*": ["lib/*"],
			"@root/*": ["*"]
		},
		"composite": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"removeComments": true
	},
	"include": [
		"."
	]
}
